NODE_ENV=development
SERVER_HOST=0.0.0.0
SERVER_PORT=8788
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pocketbrain
REDIS_URL=redis://localhost:6379
CORS_ORIGIN=http://localhost:3000
TRUST_PROXY=true
LOG_LEVEL=info
KEY_ENCRYPTION_SECRET=replace-with-32-byte-secret
STREAM_TICKET_SECRET=replace-with-separate-stream-ticket-secret
STREAM_TICKET_TTL_SECONDS=60
# Compatibility note for older releases before stream-ticket-only cutover:
# ALLOW_LEGACY_SSE_QUERY_TOKEN=false
CLERK_SECRET_KEY=
CLERK_PUBLISHABLE_KEY=
# Development-only fallback identity when insecure dev auth is enabled.
AUTH_DEV_USER_ID=dev-user-local
# Local/test only. Must be false in production.
ALLOW_INSECURE_DEV_AUTH=true
MAINTENANCE_INTERVAL_MS=600000
TOMBSTONE_RETENTION_MS=2592000000
NOTE_CHANGES_RETENTION_MS=2592000000
SYNC_BATCH_LIMIT=100
SYNC_PULL_LIMIT=500
REQUIRE_REDIS_FOR_READY=false
