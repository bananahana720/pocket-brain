{
  "name": "pocketbrain",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:proxy": "VITE_USE_AI_PROXY=true VITE_DEV_PROXY_WORKER=true vite",
    "server:dev": "npm --prefix server run dev",
    "server:build": "npm --prefix server run build",
    "server:test": "npm --prefix server run test",
    "server:test:chaos": "npm --prefix server run test:chaos",
    "build": "vite build",
    "preview": "vite preview",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "worker:dev": "WRANGLER_SEND_METRICS=false XDG_CONFIG_HOME=.wrangler-home npx wrangler dev --local --show-interactive-dev-session=false --config worker/wrangler.toml --port 8787",
    "worker:deploy": "WRANGLER_SEND_METRICS=false XDG_CONFIG_HOME=.wrangler-home npx wrangler deploy --config worker/wrangler.toml",
    "worker:kv:create": "WRANGLER_SEND_METRICS=false XDG_CONFIG_HOME=.wrangler-home npx wrangler kv namespace create AI_SESSIONS --config worker/wrangler.toml",
    "worker:secret:set": "WRANGLER_SEND_METRICS=false XDG_CONFIG_HOME=.wrangler-home npx wrangler secret put KEY_ENCRYPTION_SECRET --config worker/wrangler.toml",
    "worker:bootstrap": "bash scripts/bootstrap-worker.sh",
    "server:env:render": "bash scripts/render-server-env.sh --mode production --source .env --output server/.env",
    "config:check": "node scripts/validate-runtime-config.mjs --scope all",
    "config:check:server": "node scripts/validate-runtime-config.mjs --scope server",
    "config:check:worker": "node scripts/validate-runtime-config.mjs --scope worker",
    "vps:precheck:remote": "bash scripts/deploy-vps-remote.sh --precheck-only",
    "vps:sync:remote": "bash scripts/deploy-vps-remote.sh --sync-only",
    "vps:deploy:remote": "bash scripts/deploy-vps-remote.sh",
    "vps:verify:remote": "bash scripts/verify-vps-remote.sh",
    "vps:smoke:public": "bash scripts/smoke-public-api.sh"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.44.0",
    "@google/genai": "^1.30.0",
    "lucide-react": "^0.554.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wrangler": "^4.64.0"
  }
}
